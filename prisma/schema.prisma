// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id         String    @id @default(uuid())
  name       String    @unique
  shopifyUrl String
  apiKey     String
  customers  Customer[]
  orders     Order[]
  products   Product[]
}

model Customer {
  id       String @id
  tenantId String
  name     String
  email    String
  spend    Float  @default(0)
  tenant   Tenant @relation(fields: [tenantId], references: [id])
}

model Order {
  id         String   @id
  tenantId   String
  customerId String
  amount     Float
  date       DateTime
  tenant     Tenant   @relation(fields: [tenantId], references: [id])
}

model Product {
  id       String @id
  tenantId String
  name     String
  price    Float
  tenant   Tenant @relation(fields: [tenantId], references: [id])
}
